      xmlns:vmdashboard="clr-namespace:Đồ_án.ViewModel.DashBroad"
      DataContext="{StaticResource TeacherViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="970">

