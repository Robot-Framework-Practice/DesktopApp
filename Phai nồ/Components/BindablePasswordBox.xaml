<UserControl x:Class="Đồ_án.Components.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"

             
             
            xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             
             xmlns:local="clr-namespace:Đồ_án.Components"
             mc:Ignorable="d" 
             >
    <PasswordBox x:Name="passwordBox"  PasswordChanged="passwordBox_PasswordChanged" Width="250" Margin="5" materialDesign:HintAssist.Hint="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:BindablePasswordBox}}, Path=TextPasswordBox}"/>
</UserControl>
